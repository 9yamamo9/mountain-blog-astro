---
import type { CollectionEntry } from 'astro:content'
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import FormattedDate from '../components/FormattedDate.astro'

type Props = CollectionEntry<'blog'>['data'];

const { title, description, tags, pubDate, updatedDate, heroImage } = Astro.props
console.log(`tags: `, tags)
---

<html lang="en">
<head>
	<BaseHead title={title} description={description} />
</head>

<body>
<Header />
<main class="w-[calc(100%-2em)] max-w-100% m-0">
	<article>
		<div class="w-full">
			{heroImage &&
				<img class="block mt-0 mr-auto mb-auto ml-auto rounded-xl" width={1020} height={510}
						 src={heroImage} alt="" />}
		</div>
		<div class="w-[720px] max-w-[calc(100%-2em)] m-auto p-4 text-gray-700">
			<div class="mb-4 p-4 text-center leading-10">
				<div class="bm-8 text-gray-500">
					<FormattedDate date={pubDate} />
					{
						updatedDate && (
							<div class="italic">
								Last updated on
								<FormattedDate date={updatedDate} />
							</div>
						)
					}
				</div>
				<h1 class="mb-2">{title}</h1>
				<div class="mb-8">
					{tags && tags.map(tag => (
						<span
							class="bg-gray-100 text-gray-800 text-md font-medium me-2 px-2.5 py-0.5 rounded-full dark:bg-gray-700 dark:text-gray-300">
							{tag}
	 					</span>
					))}
				</div>
				<hr />
			</div>
			<slot />
		</div>
	</article>
</main>
<Footer />
</body>
</html>
