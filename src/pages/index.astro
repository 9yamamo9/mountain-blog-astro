---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts'
import { getCollection } from 'astro:content'
import FormattedDate from '../components/FormattedDate.astro'
import ContentTag from '../components/ContentTag.astro'

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
)
---

<!doctype html>
<html lang="jp">
<head>
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
</head>
<body>
<Header />
<main class="w-[960px]">
	<section>
		<ul class="flex flex-wrap gap-8 list-none m-0 p-0 max-md:gap-2">
			{
				posts.map((post) => (
					<li class="w-[calc(50%-1rem)] first:w-full first:mb-4 first:text-center max-md:text-center max-md:w-full">
						<a class="group no-underline duration-[0.2s] ease-in-out block" href={`/blog/${post.slug}/`}>
							<img class="first:w-full" width={720} height={360} src={post.data.heroImage} alt="" />
							<h4
								class="m-0 text-black leading-10 group-hover:text-blue-700">{post.data.title}</h4>
							<p class="m-0 text-gray-500 group-hover:text-blue-700">
								<FormattedDate date={post.data.pubDate} />
							</p>
							<ContentTag contentTags={post.data.tags} />
						</a>
					</li>
				))
			}
		</ul>
	</section>
</main>
<Footer />
</body>
</html>
